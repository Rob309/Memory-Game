<Window x:Class="MemoryGame.View.Statistics"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MemoryGame.View"
        mc:Ignorable="d"
        Background="#101010"
        Title="Statistics" Height="400" Width="500">
    <Grid>
        <TextBlock x:Name="Won" Text="Games Won: " Foreground ="White" Width="400" Height="100" FontFamily="Segoe UI Black" FontSize="30" Margin="73,219,127,65"/>
        <TextBlock x:Name="Played" Text="Games Played: " Foreground="White" Width="400" Height="100" FontFamily="Segoe UI Black" FontSize="30" Margin="73,92,127,192"/>
    </Grid>
</Window>
